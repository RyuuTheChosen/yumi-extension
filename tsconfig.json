{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["chrome", "react", "react-dom", "vitest"],
    "baseUrl": ".",
    "paths": {
      "@yumi/echo-avatar": ["../../packages/echo-avatar/src/index.ts"]
    }
  },
  "include": ["src"]
}
