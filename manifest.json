{
  "manifest_version": 3,
  "name": "Yumi - AI Web Pals",
  "version": "1.0.1",
  "description": "Chat with an animated AI companion on any webpage. Features memory, voice, page awareness, and image understanding.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.r2.dev/*",
    "https://*.koyeb.app/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Yumi Settings",
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "homepage_url": "https://yumi-pals.com",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "companions/*",
        "animations/*",
        "style.css",
        "public/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://yumi.ai/*",
      "https://*.yumi.ai/*",
      "https://yumi-pals.com/*",
      "https://*.yumi-pals.com/*"
    ]
  }
}
